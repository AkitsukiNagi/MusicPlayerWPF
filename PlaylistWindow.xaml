<Window x:Class="MusicPlayerWPF.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerWPF"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MusicPlayerWPF - 播放清單" Height="500" Width="600"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <md:Card Grid.Row="0">
            <ListView
                x:Name="PlaylistView"
                Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                        Header="檔案名稱"
                        Width="400"
                        DisplayMemberBinding="{Binding FileName}"/>
                        <GridViewColumn
                        Header="路徑"
                        Width="Auto"
                        DisplayMemberBinding="{Binding FullPath}"/>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignGridViewItem}">
                        <Setter Property="FontFamily" Value="Noto Sans CJK TC"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </md:Card>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button
                ToolTip="新增"
                Click="AddFileBtn_Click"
                Margin="5">
                <md:PackIcon Kind="FolderAdd"/>
            </Button>
            <Button
                ToolTip="移除"
                Click="RemoveSelectedBtn_Click"
                Margin="5">
                <md:PackIcon Kind="TrashCan"/>
            </Button>
            <Button
                ToolTip="清除"
                Click="ClearAllBtn_Click"
                Margin="5">
                <md:PackIcon Kind="Broom"/>
            </Button>
            <!-- <Button
                ToolTip="關閉"
                Click="CloseBtn_Click"
                Margin="5">
                <md:PackIcon Kind="Remove"/>
            </Button> -->
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button
                x:Name="InsertToNext"
                ToolTip="移至播放佇列的下一首"
                Click="InsertToNext_Click"
                Margin="5">
                <md:PackIcon Kind="ArrowRightBold"/>
            </Button>
            <Button
                x:Name="MoveUp"
                ToolTip="向上移動一格"
                Click="MoveUp_Click"
                Margin="5">
                <md:PackIcon Kind="ArrowUp"/>
            </Button>
            <Button
                x:Name="OpenInExplorer"
                ToolTip="在檔案總管中開啟"
                Click="OpenInExplorer_Click"
                Margin="5">
                <md:PackIcon Kind="OpenInApp"/>
            </Button>
            <Button
                x:Name="MoveDown"
                ToolTip="向下移動一格"
                Click="MoveDown_Click"
                Margin="5">
                <md:PackIcon Kind="ArrowDown"/>
            </Button>
            <Button
                x:Name="MoveToBottom"
                ToolTip="移動到最後"
                Click="MoveToBottom_Click"
                Margin="5">
                <md:PackIcon Kind="ArrowDownBold"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
